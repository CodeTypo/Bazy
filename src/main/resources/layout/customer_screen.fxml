<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustomerController">
   <center>
      <TabPane fx:id="tabPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="sendTab" text="Send">
            <content>

      </content>
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <WebView fx:id="orderWebView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                     </center>
                     <left>
                        <VBox alignment="TOP_CENTER" prefHeight="681.0" prefWidth="216.0" BorderPane.alignment="CENTER">
                           <children>
                              <ComboBox fx:id="recipientComboBox" prefWidth="150.0" promptText="Choose recipient">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </ComboBox>
                              <ComboBox fx:id="dimensionComboBox" prefWidth="150.0" promptText="Choose dimension">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </ComboBox>
                              <Button fx:id="orderBtn" mnemonicParsing="false" onAction="#onOrderClicked" text="Order">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Button>
                              <Text fx:id="textMsg" strokeType="OUTSIDE" strokeWidth="0.0" text="Status: awaiting user interaction" />
                              <Text fx:id="sendPaczkamatName" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                              <ComboBox fx:id="sendStash" prefWidth="150.0" />
                              <Text fx:id="receivePaczkamatName" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                              <ComboBox fx:id="receiveStash" prefWidth="150.0" />
                           </children>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                        </VBox>
                     </left>
                  </BorderPane>
               </content>
          </Tab>
          <Tab fx:id="trackTab" text="Track">
            <content>

      </content>
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <WebView fx:id="trackWebView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                     </center>
                     <top>
                        <ListView fx:id="ordersList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                     </top>
                  </BorderPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
   <top>
      <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#onLogoutClicked" text="Log out" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
